<div class='col-sm-1 widget--name'> <%= widget.name %></div>






<div class=" scaffold-line-buttons col-md-2" >
  

  
    <%= form_with url: widget_path(widget), html: {data: {'turbo-confirm': "Are you sure you want to delete #{ widget.name }?"}, style: "display: inline-block;"}, method: :delete do |f| %>
      <%= f.submit "Delete".html_safe,  class: "delete-widget-button btn btn-primary btn-sm" %>
    <% end %>
  

  
  <%= link_to "Edit ".html_safe, edit_widget_path(widget), disable_with: "Loading...", class: "edit-widget-button btn btn-primary btn-sm" %>
  
</div>
